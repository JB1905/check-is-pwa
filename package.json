{
  "name": "check-is-pwa",
  "version": "1.0.0",
  "description": "Check if app is running as PWA",
  "author": "Jakub Biesiada",
  "license": "MIT",
  "main": "lib/check-is-pwa.cjs.js",
  "module": "lib/check-is-pwa.esm.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "//prepack": "npm run clean && npm run prettier && npm run lint && npm run build",
    "clean": "rimraf lib/*",
    "build": "rollup -c",
    "test": "jest --coverage",
    "watch": "npm run build -- --watch",
    "watch:test": "npm run test -- --watch",
    "lint": "eslint 'src/**/*.ts' --fix",
    "prettier": "prettier --write 'src/**/*.ts'",
    "bundlesize": "bundlesize",
    "commit": "git-cz"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/JB1905/check-is-pwa.git"
  },
  "keywords": [
    "pwa",
    "install",
    "android",
    "ios",
    "standalone",
    "check",
    "detect"
  ],
  "bugs": {
    "url": "https://github.com/JB1905/check-is-pwa/issues"
  },
  "homepage": "https://github.com/JB1905/check-is-pwa#readme",
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^8.4.0",
    "@types/jest": "^26.0.9",
    "@types/node": "^14.0.27",
    "@typescript-eslint/parser": "^3.8.0",
    "bundlesize": "^0.18.0",
    "cz-conventional-changelog": "3.2.0",
    "cz-emoji": "^1.2.1",
    "eslint": "^7.6.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.2.5",
    "jest": "^26.2.2",
    "jest-matchmedia-mock": "^1.1.0",
    "lint-staged": "^10.2.11",
    "prettier": "^2.0.5",
    "rollup-plugin-terser": "^6.1.0",
    "rollup-plugin-typescript2": "^0.27.2",
    "ts-jest": "^26.1.4",
    "typescript": "^3.9.7"
  },
  "jest": {
    "transform": {
      "^.+\\.ts?$": "ts-jest"
    }
  },
  "bundlesize": [
    {
      "path": "./lib/*",
      "maxSize": "500 B"
    }
  ],
  "config": {
    "commitizen": {
      "path": "cz-emoji"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.ts": [
      "npm run prettier",
      "npm run lint"
    ]
  }
}

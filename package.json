{
  "name": "check-is-pwa",
  "version": "1.0.0",
  "description": "Check if app is running as PWA",
  "author": "Jakub Biesiada",
  "license": "MIT",
  "main": "lib/check-is-pwa.cjs.js",
  "module": "lib/check-is-pwa.esm.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "prepack": "npm run clean && npm run prettier && npm run lint && npm run build",
    "clean": "rimraf lib/*",
    "build": "rollup -c",
    "test": "jest --coverage",
    "watch": "npm run build -- --watch",
    "watch:test": "npm run test -- --watch",
    "lint": "eslint 'src/**/*.ts' --fix",
    "prettier": "prettier --write 'src/**/*.ts'",
    "bundlesize": "bundlesize",
    "commit": "git-cz",
    "semantic-release": "semantic-release"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/JB1905/check-is-pwa.git"
  },
  "keywords": [
    "android",
    "ios",
    "pwa",
    "detect",
    "install",
    "standalone",
    "check"
  ],
  "bugs": {
    "url": "https://github.com/JB1905/check-is-pwa/issues"
  },
  "homepage": "https://github.com/JB1905/check-is-pwa#readme",
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^13.0.0",
    "@semantic-release/git": "^9.0.0",
    "@types/jest": "^26.0.24",
    "@types/node": "^16.3.1",
    "@typescript-eslint/parser": "^4.28.2",
    "bundlesize": "^0.18.1",
    "cz-conventional-changelog": "3.3.0",
    "cz-emoji": "^1.3.1",
    "eslint": "^7.30.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "husky": "^7.0.1",
    "jest": "^27.0.6",
    "jest-matchmedia-mock": "^1.1.0",
    "lint-staged": "^11.0.0",
    "prettier": "^2.3.2",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.30.0",
    "semantic-release": "^17.4.4",
    "semantic-release-gitmoji": "^1.3.4",
    "ts-jest": "^27.0.3",
    "typescript": "^4.3.5"
  },
  "config": {
    "commitizen": {
      "path": "cz-emoji"
    }
  },
  "jest": {
    "transform": {
      "^.+\\.ts?$": "ts-jest"
    }
  },
  "bundlesize": [
    {
      "path": "./lib/*",
      "maxSize": "500 B"
    }
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.ts": [
      "npm run prettier",
      "npm run lint"
    ]
  }
}

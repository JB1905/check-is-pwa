{
  "name": "check-is-pwa",
  "version": "0.0.0",
  "description": "Check if app is running as PWA",
  "author": "Jakub Biesiada",
  "license": "MIT",
  "main": "lib/check-is-pwa.cjs.js",
  "module": "lib/check-is-pwa.esm.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "release": "rimraf lib/* && npm run prettier && npm run lint && npm run build",
    "build": "@pika/pack",
    "test": "jest --coverage",
    "watch": "npm run build -- --watch",
    "watch:test": "npm run test -- --watch",
    "lint": "eslint 'src/**/*.ts' --fix",
    "prettier": "prettier --write 'src/**/*.ts'",
    "commit": "git-cz"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/JB1905/check-is-pwa.git"
  },
  "@pika/pack": {
    "pipeline": [
      [
        "@pika/plugin-standard-pkg"
      ],
      [
        "@pika/plugin-build-node"
      ],
      [
        "@pika/plugin-build-web"
      ],
      [
        "@pika/plugin-build-types"
      ]
    ]
  },
  "keywords": [
    "pwa",
    "install",
    "android",
    "ios",
    "standalone",
    "check",
    "detect"
  ],
  "bugs": {
    "url": "https://github.com/JB1905/check-is-pwa/issues"
  },
  "homepage": "https://github.com/JB1905/check-is-pwa#readme",
  "devDependencies": {
    "@pika/plugin-build-node": "^0.9.2",
    "@pika/plugin-build-web": "^0.9.2",
    "@pika/plugin-standard-pkg": "^0.9.2",
    "@rollup/plugin-node-resolve": "^8.4.0",
    "@types/jest": "^26.0.7",
    "@types/node": "^14.0.26",
    "@typescript-eslint/parser": "^3.7.0",
    "cz-conventional-changelog": "3.2.0",
    "cz-emoji": "^1.2.1",
    "eslint": "^7.5.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "jest": "^26.1.0",
    "jest-matchmedia-mock": "^1.0.1",
    "prettier": "^2.0.5",
    "ts-jest": "^26.1.3",
    "typescript": "^3.9.7"
  },
  "jest": {
    "transform": {
      "^.+\\.ts?$": "ts-jest"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.ts": [
      "npm run prettier",
      "npm run lint"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-emoji"
    }
  }
}

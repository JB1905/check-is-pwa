{
  "name": "check-is-pwa",
  "version": "1.0.0",
  "description": "Check if the application is running as a PWA",
  "author": "Jakub Biesiada",
  "license": "MIT",
  "main": "lib/check-is-pwa.cjs.js",
  "module": "lib/check-is-pwa.esm.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "prepack": "npm run prettier && npm run lint && npm run build",
    "clean": "rimraf lib/*",
    "build": "rollup -c",
    "prebuild": "npm run clean",
    "test": "jest --coverage",
    "watch": "npm run build -- --watch",
    "watch:test": "npm run test -- --watch",
    "lint": "eslint 'src/**/*.ts' --fix",
    "prettier": "prettier --write 'src/**/*.ts'",
    "bundlesize": "bundlesize",
    "commit": "git-cz",
    "semantic-release": "semantic-release",
    "prepare": "husky install",
    "pre-commit": "lint-staged"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/JB1905/check-is-pwa.git"
  },
  "keywords": [
    "android",
    "ios",
    "device",
    "mobile",
    "browser",
    "web",
    "pwa",
    "detect",
    "install",
    "match",
    "media",
    "standalone",
    "check"
  ],
  "bugs": {
    "url": "https://github.com/JB1905/check-is-pwa/issues"
  },
  "homepage": "https://github.com/JB1905/check-is-pwa#readme",
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^13.1.2",
    "@semantic-release/git": "^10.0.1",
    "@types/jest": "^27.4.0",
    "@types/node": "^17.0.6",
    "@typescript-eslint/parser": "^5.8.1",
    "bundlesize2": "^0.0.31",
    "cz-conventional-changelog": "^3.3.0",
    "cz-emoji": "^1.3.1",
    "eslint": "^8.6.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.4",
    "jest": "^27.4.5",
    "jest-matchmedia-mock": "^1.1.0",
    "lint-staged": "^12.1.4",
    "prettier": "^2.5.1",
    "rollup": "^2.62.0",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.31.1",
    "semantic-release": "^19.0.3",
    "semantic-release-gitmoji": "^1.4.2",
    "ts-jest": "^27.1.2",
    "typescript": "^4.5.4"
  },
  "config": {
    "commitizen": {
      "path": "cz-emoji"
    }
  },
  "jest": {
    "testEnvironment": "jsdom",
    "transform": {
      "^.+\\.ts?$": "ts-jest"
    }
  },
  "bundlesize": [
    {
      "path": "./lib/*",
      "maxSize": "500 B"
    }
  ],
  "lint-staged": {
    "src/**/*.ts": [
      "npm run prettier",
      "npm run lint"
    ]
  }
}
